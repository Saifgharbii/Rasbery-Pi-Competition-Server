<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CyberLabs Registration</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --cyber-red: #ff003c;
        --cyber-black: #0a0a0a;
        --neon-glow: 0 0 15px var(--cyber-red);
      }

      body {
        margin: 0;
        overflow: hidden;
        background: var(--cyber-black);
        color: white;
        font-family: "Orbitron", sans-serif;
        min-height: 100vh;
      }

      /* Matrix Background */
      .matrix-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
      }

      .matrix-column {
        position: absolute;
        top: 0;
        width: 2px;
        height: 100%;
        background: linear-gradient(
          to bottom,
          transparent,
          var(--cyber-red),
          transparent
        );
        animation: matrixFall linear infinite;
      }

      @keyframes matrixFall {
        0% {
          transform: translateY(-100%);
        }
        100% {
          transform: translateY(100%);
        }
      }

      /* Glowing Grid */
      .grid-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to right,
            rgba(255, 0, 60, 0.05) 1px,
            transparent 1px
          ),
          linear-gradient(
            to bottom,
            rgba(255, 0, 60, 0.05) 1px,
            transparent 1px
          );
        background-size: 20px 20px;
        animation: gridMove 10s linear infinite;
      }

      @keyframes gridMove {
        0% {
          transform: translate(0, 0);
        }
        100% {
          transform: translate(-20px, -20px);
        }
      }

      /* Registration Form */

      .cyber-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        position: relative;
      }

      .cyber-card {
        background: linear-gradient(45deg, #1a1a1a, #0a0a0a);
        border: 2px solid var(--cyber-red);
        box-shadow: 0 0 25px var(--cyber-red);
        padding: 2rem;
        width: 100%;
        max-width: 500px;
        position: relative;
        overflow: hidden;
      }

      .cyber-card::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
          45deg,
          transparent,
          var(--cyber-red),
          transparent
        );
        animation: glow 4s linear infinite;
        z-index: -1;
      }

      @keyframes glow {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      .cyber-title {
        font-size: 2.5rem;
        text-align: center;
        text-shadow: 0 0 15px var(--cyber-red);
        margin-bottom: 2rem;
      }

      .cyber-input {
        background: #111 !important;
        border: 1px solid var(--cyber-red) !important;
        color: white !important;
        margin: 1rem 0;
        padding: 1rem;
        border-radius: 0;
        transition: all 0.3s;
      }

      .cyber-input:focus {
        box-shadow: 0 0 15px var(--cyber-red);
        border: 1px solid var(--cyber-red) !important;
      }
      .cyber-input::placeholder {
        color: rgb(172, 172, 172);
      }

      .cyber-btn {
        background: var(--cyber-red);
        border: none;
        padding: 1rem 2rem;
        font-weight: bold;
        width: 100%;
        margin-top: 1rem;
        position: relative;
        overflow: hidden;
        transition: all 0.3s;
      }

      .cyber-btn:hover {
        box-shadow: 0 0 25px var(--cyber-red);
        transform: scale(1.02);
      }

      .cyber-btn::after {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
          45deg,
          transparent,
          rgba(255, 255, 255, 0.2),
          transparent
        );
        animation: btnGlow 3s linear infinite;
      }

      @keyframes btnGlow {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      @keyframes glow {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      .cyber-title {
        font-size: 2.5rem;
        text-align: center;
        text-shadow: var(--neon-glow);
        margin-bottom: 2rem;
      }

      .cyber-input {
        background: rgba(17, 17, 17, 0.8) !important;
        border: 1px solid var(--cyber-red) !important;
        color: white !important;
        margin: 1rem 0;
        padding: 1rem;
        border-radius: 0;
        transition: all 0.3s;
      }

      .cyber-input:focus {
        box-shadow: var(--neon-glow);
        border: 1px solid var(--cyber-red) !important;
      }

      .cyber-btn {
        background: var(--cyber-red);
        border: none;
        padding: 1rem 2rem;
        font-weight: bold;
        width: 100%;
        margin-top: 1rem;
        position: relative;
        overflow: hidden;
        transition: all 0.3s;
      }

      .cyber-btn:hover {
        box-shadow: 0 0 25px var(--cyber-red);
        transform: scale(1.02);
      }

      .cyber-btn::after {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
          45deg,
          transparent,
          rgba(255, 255, 255, 0.2),
          transparent
        );
        animation: btnGlow 3s linear infinite;
      }

      @keyframes btnGlow {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
    </style>
  </head>

  <body>
    <!-- Matrix Background -->
    <div class="matrix-bg">
      <!-- Generate matrix columns dynamically -->
      <script>
        for (let i = 0; i < 50; i++) {
          const col = document.createElement("div");
          col.className = "matrix-column";
          col.style.left = `${Math.random() * 100}%`;
          col.style.animationDuration = `${Math.random() * 2 + 3}s`;
          col.style.animationDelay = `${Math.random() * 2}s`;
          document.querySelector(".matrix-bg").appendChild(col);
        }
      </script>
    </div>

    <!-- Moving Grid Overlay -->
    <div class="grid-overlay"></div>

    <!-- Registration Form -->
    <div class="cyber-container">
      <div class="cyber-card">
        <h1 class="cyber-title">RAS CAMP REGISTRATION</h1>
        <%- message %>
        <form id="registrationForm" method="post" action="/signin">
          <input
            type="text"
            class="form-control cyber-input"
            placeholder="Username"
            name="username"
            required
          />

          <input
            type="email"
            class="form-control cyber-input"
            placeholder="Email"
            name="email"
            required
          />

          <button type="submit" class="btn cyber-btn">ENTER THE SYSTEM</button>
        </form>
      </div>
    </div>
  </body>
</html>
